<!DOCTYPE html>
<html lang="en">
<!-- HEAD-->
<%- include("../partials/head.ejs") %>

    <body>
        <!-- dashboard admin -->
        <%- include("../partials/dashboard.ejs") %>

            <div class="admin-content">
                <%- include("../partials/header.ejs") %>

                    <main>
                        <h1>Agregar subcategoria</h1>
                        <form action="/admin/subcategories/create" method="POST">
                            <div class="form caja-agregar">
                                Nombre:<label for="subcategory-name"><input class="input style-admin" type="text"
                                        name="name" id="subcategory-name" required placeholder="Nombre de la subcategoria"/>
                                </label>
                                Categor√≠a:<label for="categoria-producto">
                                    <select class="input style-admin categorySelect" name="categoria" id="categoria-producto">
                                        <option selected hidden value="">Categorias</option>
                                     <% categories.forEach(category => { %>
                                        <option value="<%- category.id %>"><%- category.name %></option>
                                     <% }) %>
                                    </select>
                                  </label>
                                <button type="submit" class="btn-admin style-admin">
                                    CREAR
                                </button>
                            </div>
                        </form>
                    </main>
            </div>
    </body>

</html>