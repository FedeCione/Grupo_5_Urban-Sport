<!DOCTYPE html>
<html lang="es">
    <%- include("partials/head.ejs") %> 
      <!-- styles -->
    <link rel="stylesheet" href="/stylesheets/variables.css" />
    <link rel="stylesheet" href="/stylesheets/darkMode.css">
    <link rel="stylesheet" href="/stylesheets/login.css" />
  <body>
    
      <!------------- HEADER -------------------->
          <%- include("partials/header.ejs") %> 
       <!-- --------------Dark Mode----------------- -->
         <%- include("partials/darkMode.ejs") %> 
       <!-- -----------Fin Dark Mode---------------- -->
      <form class="form-register">
        <h4 class="titulo">Iniciar Sesión</h4>
        <input
          class="controls"
          type="email"
          name="correo"
          id="correo"
          placeholder="Ingrese su Email"
          required
        />
        <input
          class="controls"
          type="password"
          name="password"
          id="password"
          placeholder="Ingrese su Contraseña"
          required
        />
        <p class="condiciones">
          <input type="checkbox" name="recordar sesion" required />
          <label for="recordar sesion">¿Recordar usuario?</label>
        </p> 
        <button class="botons" type="submit" required>Ingresar</button>
      
        <p class="condiciones">
          <a class="condiciones" href="http://localhost:3020/recovery">¿Olvidaste tu contraseña?</a>
        </p>
      </form>
  <!-------------- FOOTER ------------------------>
 
    <%- include("partials/footer.ejs") %> 
  

       <script src="/javascripts/darkMode.js"></script>
       <script src="/javascripts/home.js"></script>
<script src="https://cdn.jsdelivr.net/npm/glider-js@1.7.7/glider.min.js"></script>
</body>
</html>
