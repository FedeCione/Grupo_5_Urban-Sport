<!DOCTYPE html>
<html lang="es">
  <%- include("partials/head.ejs") %>
  <!-- Styles -->
  <link rel="stylesheet" href="/stylesheets/login.css" />

  <!-- Javascript -->
  <script src="/javascripts/home.js" defer></script>

  <body>
    <!------------- HEADER -------------------->
    <%- include("partials/header.ejs") %>

    <!-- --------------Dark Mode----------------- -->
    <%- include("partials/darkMode.ejs") %>
    <!-- -----------Fin Dark Mode---------------- -->

    <main id="main-dark">
      <form class="form-register">
        <h4 class="titulo">Iniciar Sesión</h4>
        <input
          class="controls"
          type="email"
          name="correo"
          id="correo"
          placeholder="Ingrese su Email"
          required
        />
        <input
          class="controls"
          type="password"
          name="password"
          id="password"
          placeholder="Ingrese su Contraseña"
          required
        />
        <p class="condiciones">
          <input type="checkbox" name="recordar sesion" required />
          <label for="recordar sesion">¿Recordar usuario?</label>
        </p>
        <button class="botons" type="submit" required>Ingresar</button>

        <p class="condiciones">
          <a class="condiciones" href="http://localhost:3020/recovery"
            >¿Olvidaste tu contraseña?</a
          >
        </p>
      </form>
    </main>
    <!-------------- FOOTER ------------------------>
    <%- include("partials/footer.ejs") %>
  </body>
</html>
