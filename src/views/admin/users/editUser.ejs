<!DOCTYPE html>
<html lang="en">
<!-- HEAD-->
<%- include("../partials/head.ejs") %>

    <body>
        <!-- dashboard admin -->
        <%- include("../partials/dashboard.ejs") %>

            <div class="admin-content">
                <%- include("../partials/header.ejs") %>

                    <main>
                        <h1>Editar usuario #<%= user.id %></h1>
                        <form action="/admin/users/edit/<%=user.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                            <div class="form caja-agregar">
                                Nombre:<label for="name"><input class="input style-admin" type="text" name="name"
                                        id="name" required placeholder="Nombre" value="<%= user.name %>" />
                                </label>
                                Apellido:<label for="last_name"><input class="input style-admin" type="text"
                                        name="last_name" id="last-name" required placeholder="Apellido"
                                        value="<%= user.last_name %>" />
                                </label>
                                Email:<label for="email"><input class="input style-admin" type="text" name="email"
                                        id="email" required placeholder="Email" value="<%= user.email %>" />
                                </label>
                                Telefono:<label for="phone"><input class="input style-admin" type="text" name="phone"
                                        id="phone" placeholder="Telefono" value="<%= user.phone %>" />
                                </label>
                                Direccion:<label for="address"><input class="input style-admin" type="text"
                                        name="address" id="address" placeholder="Direccion"
                                        value="<%= user.address %>" />
                                </label>
                                Rol:<label for="rol_id">
                                    <select class="input style-admin" name="rol_id" id="rol_id">
                                        <% if(user.rol_id==1) { %>
                                            <option value="1" selected>Administrador</option>
                                            <option value="0">Usuario</option>
                                            <% } else { %>
                                                <option value="1">Administrador</option>
                                                <option value="0" selected>Usuario</option>
                                                <% } %>
                                    </select>
                                </label>
                                Provincia:<label for="province"><input class="input style-admin" type="text"
                                        name="province" id="province" placeholder="Provincia"
                                        value="<%= user.province %>" />
                                </label>
                                Ciudad:<label for="city"><input class="input style-admin" type="text" name="city"
                                        id="city" placeholder="Ciudad" value="<%= user.city %>" />
                                </label>
                                Avatar:<label for="avatar"><input class="input style-admin" type="file" name="avatar"
                                        id="avatar" placeholder="Avatar" value="<%= user.avatar %>" />
                                </label>
                                DNI:<label for="dni"><input class="input style-admin" type="text" name="dni" id="dni"
                                        placeholder="DNI" value="<%= user.dni %>" />
                                </label>
                                Codigo Postal:<label for="postalcode"><input class="input style-admin" type="text"
                                        name="postalcode" id="postalcode" placeholder="Codigo Postal"
                                        value="<%= user.postalcode %>" />
                                </label>
                                <button type="submit" class="btn-admin style-admin">
                                    EDITAR
                                </button>
                            </div>
                        </form>
                    </main>
            </div>
    </body>

</html>