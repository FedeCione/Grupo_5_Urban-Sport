<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/general.css" />
    <link rel="stylesheet" href="/stylesheets/variables.css" />
    <link rel="stylesheet" href="/stylesheets/admin/loginAdministrador.css" />
    <link rel="stylesheet" href="/stylesheets/admin/adminHeader.css" />

    <script src="/javascripts/darkMode.js" defer></script>
    <script src="/javascripts/home.js" defer></script>
    <script src="/javascripts/productsAdd.js" defer></script>
  </head>
  <body>
    <input type="checkbox" id="nav-toggle-admin" />
    <div class="sidebar-admin">
      <div class="sidebar-admin-principal">
        <h2>
          <img class="icons8-casa" src="/images/admin/icons8-casa.gif" alt="" />
          <a href="agregar" class="active">
            <span
              >Administrador
              <i class="las la-times"></i>
            </span>
          </a>
        </h2>
      </div>

      <!-- dashboard admin -->
      <%- include("partials/admin/menu.ejs") %>
    </div>

    <div class="admin-content">
      <%- include("partials/admin/header.ejs") %>

      <main id="main-dark">
        <div>
          <h1>Agregar Producto</h1>
          <form
            action="/admin/agregar"
            method="POST"
            enctype="multipart/form-data"
            style="margin-top: 5.5em"
            name="formAdd"
          >
             <!-- empeiza caja con caracteristicas del producto-->
             <div class="form caja-agregar">
              Nombre:<label for="nombre-producto"
                ><input
                  class="input style-admin"
                  type="text"
                  name="name"
                  id="nombre-producto"
                  required
                  placeholder="Nombre del producto"
                />
              </label>
              
              Marca:
              <label for="marca-producto">
                <select class="input style-admin" name="id_marca" id="marca_producto" required>
                <option>Seleccionar marca</option>
                <% brands.forEach(brand => { %>
                  <option value="<%- brand.id %>"><%- brand.name %></option>
                <% }) %>
                 </select>
                <% if (locals.errors && errors.brand) { %>
                  <small class="text-danger"><%= errors.brand.msg %></small>
                <% } %>
                </select>
              </label>

              Descripción:<label for="descripción-producto"
                ><input
                  id="descripción-producto"
                  cols="30"
                  rows="10"
                  class="input style-admin"
                  name="description"
                  required
                  placeholder="Descripción del producto"
                  
              /></label>
              Categoría:<label for="categoria-producto">
                <select class="input style-admin" name="categoria" id="categoria-producto">
                  <option>Seleccionar categoría</option>
                  <% categories.forEach(category => { %> 
                  <option value="<%- category.id %>"><%- category.name %></option>
                  <% }) %>
                </select>
              </label>
              Subcategoría:<label for="subcategoria-producto">
                <select class="input style-admin" id="subcategoria-producto" name="id_subcategory">
                  <option>Seleccionar  Subcategoría</option>
                  <% subcategories.forEach(subcategory => { %>
                    <option value="<%- subcategory.id %>"><%- subcategory.name %></option>
                  <% }) %>
                </select>
              </label>
              Color:
              <label for="colores-producto">
                <select class="input style-admin" name="colour" id="colores-producto">
                <option value="">Seleccionar color</option>
                <% colours.forEach(colour => { %>
                  <option value="<%- colour.id %>"><%- colour.name %></option>
                <% }) %>
                 </select>
                </label>
              Talle:<label for="talles-producto">
                <select class="input style-admin" name="id_talle" id="talles-producto">
                  <option value="">Seleccionar talle</option>
                    <% talles.forEach(talle => { %>
                      <option value="<%- talle.id %>" name="id_talle"><%- talle.talle %></option>
                    <% }) %>
                  </select>
              </label>
              Precio:<label for="precio-producto">
                <input
                  id="precio-producto"
                  class="input style-admin"
                  type="number"
                  name="price"
                  required
                  placeholder="Modificar precio del producto"
                  
                />
              </label>
              Descuento:<label for="producto-discontinuo">
                <input
                  id="producto-discontinuo"
                  class="input style-admin"
                 
                  name="discount"
                  required
                  placeholder="Descuento"
                  
                />
              </label>
              Imagen:<label for="imagen-producto"
                ><input
                  id="imagen-producto"
                  class="input style-admin"
                  type="file"
                  name="image"
                  multiple
                />
                <% if (locals.errors && errors.image) { %>
                  <small class="text-danger"><%= errors.image.msg %> </small>
                <% } %>
              </label>
              Visible:<label for="producto-visible">
                <select class="input style-admin" name="visible" id="producto-visible" required>
                  <option value="1">Si</option>
                  <option value="0">No</option>
                </select>
              </label>
              Stock:<label for="stock">
                <input
                  id="stock"
                  class="input style-admin"
                 
                  name="stock"
                  required
                  placeholder="Modificar stock"
                  
                />
              </label>
            </div>
            <div class="form">
              <button
                type="submit"
                class="btn-admin style-admin"
                value="guardar"
              >
                GUARDAR
              </button>
            </div>
          </form>
        </div>
      </main>
    </div>
  </body>
</html>
