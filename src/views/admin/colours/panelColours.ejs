<!DOCTYPE html>
<html lang="en">
<!-- HEAD-->
<%- include("../partials/head.ejs") %>

    <body>
        <!-- dashboard admin -->
        <%- include("../partials/dashboard.ejs") %>

            <div class="admin-content">
                <%- include("../partials/header.ejs") %>

                    <main>
                        <h1>Colores</h1>
                        <div style="overflow: auto" class="panel">
                            <table>
                                <thead>
                                    <tr>
                                        <th colspan="1" scope="col">#</th>
                                        <th colspan="1" scope="col">Nombre</th>
                                        <th colspan="1" scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% colours.forEach(colour => { %>
                                    <tr>
                                        <td colspan="1" scope="col">
                                            <%- colour.id %>
                                        </td>
                                        <td colspan="1" scope="col">
                                            <%- colour.name %>
                                        </td>
                                        <td colspan="1" scope="col">
                                        <form>
                                            <button style="cursor: pointer" type="submit" class="btn-admin style-admin">
                                                <a href="colours/edit/<%-colour.id %>?_method=PUT"
                                                    class="edit-button-products">Editar</a>
                                            </button>
                                        </form>
                                        <form action="colours/delete/<%-colour.id %>?_method=DELETE" method="post">
                                            <button style="cursor: pointer" class="btn-admin style-admin" type="submit">
                                                Eliminar
                                            </button>
                                        </form>
                                        </td>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3" scope="col">
                                            Total de Colores:<%- colours.length %>
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </main>
            </div>
    </body>

</html>