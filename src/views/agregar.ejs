<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/general.css" />
    <link rel="stylesheet" href="/stylesheets/variables.css" />
    <link rel="stylesheet" href="/stylesheets/admin/loginAdministrador.css" />
    <link rel="stylesheet" href="/stylesheets/admin/adminHeader.css" />
  </head>
  <body>
    <input type="checkbox" id="nav-toggle-admin" />
    <div class="sidebar-admin">
      <div class="sidebar-admin-principal">
        <h2>
          <img class="icons8-casa" src="/images/admin/icons8-casa.gif" alt="" />
          <a href="agregar" class="active">
            <span
              >Administrador
              <i class="las la-times"></i>
            </span>
          </a>
        </h2>
      </div>

      <!-- dashboard admin -->
      <%- include("partials/admin/menu.ejs") %>
    </div>

    <div class="admin-content">
      <%- include("partials/admin/header.ejs") %>

      <main id="main-dark">
        <div>
          <h1>Agregar Producto</h1>
          <form
            action="/admin/agregar"
            method="POST"
            enctype="multipart/form-data"
            style="margin-top: 5.5em"
          >
             <!-- empeiza caja con caracteristicas del producto-->
             <div class="form caja-agregar">
              Nombre:<label for="nombre-producto"
                ><input
                  class="input style-admin"
                  type="text"
                  name="name"
                  id="nombre-producto"
                  required
                  placeholder="Nombre del producto"
                 
                />
              </label>
              Marca:<label for="marca-producto"
                ><input
                  class="input style-admin"
                  type="text"
                  name="marca"
                  id="marca-producto"
                  required
                  placeholder="Marca del producto"
                  
                />
              </label>
              Descripción:<label for="descripción-producto"
                ><input
                  id="descripción-producto"
                  cols="30"
                  rows="10"
                  class="input style-admin"
                  name="descripcion"
                  required
                  placeholder="Descripción del producto"
                  
              /></label>
              Categoría:<label for="categoria-producto">
                <select
                  class="input style-admin"
                  name="categoria"
                  id="categoria-producto"
                  
                >
                  <option value="">Seleccionar categoría</option>
                  <option value="hombre">Hombre</option>
                  <option value="mujer">Mujer</option>
                  <option value="niños">Niños</option>
                </select>
              </label>
              Subcategoría:<label for="subcategoria-producto">
                <select
                  class="input style-admin"
                  name="subcategoria"
                  id="subcategoria-producto"
                  
                >
                  <option value="">Seleccionar  Subcategoría</option>
                  <option value="pantalon">pantalon </option>
                  <option value="remera">remera</option>
                </select>
              </label>
              Color:<label for="colores-producto"
                ><select
                  class="input style-admin"
                  name="color"
                  id="colores-producto"
                  
                >
                  <option value="">Seleccionar color</option>
                  <option value="negro">Negro </option>
                  <option value="blanco">Blanco</option>
                  <option value="azul">Azul</option>
                </select></label
              >
              Talle:<label for="talles-producto">
                <select
                  class="input style-admin"
                  name="talle"
                  id="talles-producto"
                  
                >
                  <option value="">Seleccionar talle</option>
                  <option value="S">S</option>
                  <option value="M">M</option>
                  <option value="L">L</option>
                </select>
              </label>
              Precio:<label for="precio-producto">
                <input
                  id="precio-producto"
                  class="input style-admin"
                  type="number"
                  name="precio"
                  required
                  placeholder="Modificar precio del producto"
                  
                />
              </label>
              Discontinuo:<label for="producto-discontinuo">
                <input
                  id="producto-discontinuo"
                  class="input style-admin"
                 
                  name="discontinuo"
                  required
                  placeholder="Producto discontinuo?"
                  
                />
              </label>
              Imagen:<label for="imagen-producto"
                ><input
                  id="imagen-producto"
                  class="input style-admin"
                  type="file"
                  name="imagen"
                  multiple
                  
                />
              </label>
              Visible:<label for="producto-visible">
                <input
                  id="producto-visible"
                  class="input style-admin"
                 
                  name="visible"
                  required
                  placeholder="Modificar visibilidad del producto"
                  
                />
              </label>
              Stock:<label for="stock">
                <input
                  id="stock"
                  class="input style-admin"
                 
                  name="stock"
                  required
                  placeholder="Modificar stock"
                  
                />
              </label>
            </div>
            <div class="form">
              <button
                type="submit"
                class="btn-admin style-admin"
                value="guardar"
              >
                GUARDAR
              </button>
            </div>
          </form>
        </div>
      </main>
    </div>

    <script src="/javascripts/darkMode.js"></script>
    <script src="/javascripts/home.js"></script>
  </body>
</html>
