<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/general.css" />
    <link rel="stylesheet" href="/stylesheets/variables.css" />
    <link rel="stylesheet" href="/stylesheets/admin/loginAdministrador.css" />
    <link rel="stylesheet" href="/stylesheets/admin/adminHeader.css" />
  </head>
  <body>
    <input type="checkbox" id="nav-toggle-admin" />
    <div class="sidebar-admin">
      <div class="sidebar-admin-principal">
        <h2>
          <img class="icons8-casa" src="/images/admin/icons8-casa.gif" alt="" />
          <a href="/admin/editar/<%= product.id %>?_method=PUT" class="active">
            <span
              >Administrador
              <i class="las la-times"></i>
            </span>
          </a>
        </h2>
      </div>

      <!-- dashboard admin -->
      <div class="sidebar-admin-menu">
        <ul>
          <li>
            <a href="/admin/panelProductos" class="active"
              ><span class="lab la-dropbox"></span>
              <span>Panel de Productos</span>
            </a>
          </li>
          <li>
            <a href="/admin/agregar"
              ><span class="las la-plus-circle"></span>
              <span>Agregar Producto</span>
            </a>
          </li>
          <li>
            <a href="#">
              <span class="las la-users"></span> <span>Clientes</span></a
            >
          </li>
          <li>
            <a href="/"
              ><span class="las la-user-slash"></span> <span>Salir</span></a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="admin-content">
      <%- include("partials/admin/header.ejs") %>

      <main id="main-dark">
        <div>
          <h1>Editar Producto <%= product.name %></h1>
          <form
            action="/admin/editar/<%= product.id %>?_method=PUT"
            method="POST"
            style="margin-top: 5.5em"
          >
            <div class="form caja-agregar">
              Nombre:<label for="nombre-producto"
                ><input
                  class="input style-admin"
                  type="text"
                  name="name"
                  id="nombre-producto"
                  required
                  placeholder="Nombre del producto"
                  value="<%= product.name %> "
                />
              </label>
              Marca:<label for="marca-producto"
                ><input
                  class="input style-admin"
                  type="text"
                  name="id_marca"
                  id="marca-producto"
                  required
                  placeholder="Marca del producto"
                  value="<%= product.id_marca %> "
                />
              </label>
              Descripción:<label for="descripción-producto"
                ><input
                  id="descripción-producto"
                  cols="30"
                  rows="10"
                  class="input style-admin"
                  name="description"
                  required
                  placeholder="Descripción del producto"
                  value="<%= product.description %> "
              /></label>
              Categoría:<label for="categoria-producto">
                <select
                  class="input style-admin"
                  name="categoria"
                  id="categoria-producto"
                  value="  "
                >
                  <option value="">Seleccionar categoría</option>
                  <option value="hombre">Hombre</option>
                  <option value="mujer">Mujer</option>
                  <option value="niños">Niños</option>
                </select>
              </label>
              Subcategoría:<label for="subcategoria-producto">
                <select
                  class="input style-admin"
                  name="id_subcategory"
                  id="subcategoria-producto"
                  value="<%= product.id_subcategory %>  "
                >
                  <option value="">Seleccionar  Subcategoría</option>
                  <option value="<%- product.id_subcategory %>">pantalon </option>
                  <option value="remera">remera</option>
                </select>
              </label>
              Color:<label for="colores-producto"
                ><select
                  class="input style-admin"
                  name="colour"
                  id="colores-producto"
                  value="<%= product.id_colour %>  "
                >
                  <option value="">Seleccionar color</option>
                  <option value="<%= product.id_colour %> ">Rojo </option>
                  <option value="blanco">Blanco</option>
                  <option value="azul">Azul</option>
                </select></label
              >
              Talle:<label for="talles-producto">
                <select
                  class="input style-admin"
                  name="id_talle"
                  id="talles-producto"
                  value="<%= product.id_talle %>"
                >
                  <option value="">Seleccionar talle</option>
                  <option value="<%= product.id_talle %>"> S</option>
                  <option value="<%= product.id_talle %>">M</option>
                  <option value="3">L</option>
                </select>
              </label>
              Precio:<label for="precio-producto">
                <input
                  id="precio-producto"
                  class="input style-admin"
                  type="number"
                  name="price"
                  required
                  placeholder="Modificar precio del producto"
                  value="<%= product.price %>"
                />
              </label>
              Discontinuo:<label for="producto-discontinuo">
                <input
                  id="producto-discontinuo"
                  class="input style-admin"
                 
                  name="discount"
                  required
                  placeholder="Producto discontinuo?"
                  value="<%= product.discount %>"
                />
              </label>
              Imagen:<label for="imagen-producto"
                ><input
                  id="imagen-producto"
                  class="input style-admin"
                  type="file"
                  name="image"
                  multiple
                  value="<%= product.id_image %> "
                />
              </label>
              Visible:<label for="producto-visible">
                <input
                  id="producto-visible"
                  class="input style-admin"
                 
                  name="visible"
                  required
                  placeholder="Modificar visibilidad del producto"
                  value="<%= product.visible %>"
                />
              </label>
              Stock:<label for="stock">
                <input
                  id="stock"
                  class="input style-admin"
                 
                  name="stock"
                  required
                  placeholder="Modificar stock"
                  value="<%= product.stock %>"
                />
              </label>
            </div>
            <div class="form">
              <button type="submit" class="btn-admin style-admin">
                EDITAR
              </button>
            </div>
          </form>
        </div>

        <!-- los values del select no funcan -->
      </main>
    </div>

    <script src="/javascripts/darkMode.js"></script>
    <script src="/javascripts/home.js"></script>
  </body>
</html>
