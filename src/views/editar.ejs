<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/general.css" />
    <link rel="stylesheet" href="/stylesheets/variables.css" />
    <link rel="stylesheet" href="/stylesheets/admin/loginAdministrador.css">
    <link rel="stylesheet" href="/stylesheets/admin/adminHeader.css" />

  </head>
  <body>
    <input type="checkbox" id="nav-toggle-admin" />
    <div class="sidebar-admin">
      <div class="sidebar-admin-principal">
        <h2>
          <img class="icons8-casa" src="/images/admin/icons8-casa.gif" alt="" />
          <a href="/admin/editar/<%= product.id %>?_method=PUT" class="active">
          <span >Administrador
          <i class="las la-times"></i>

          </span>

        </a>

        </h2>
      </div>

      <!-- dashboard admin -->
      <div class="sidebar-admin-menu">
        <ul>
          <li>
            <a href="/admin/panelProductos" class="active"
              ><span class="lab la-dropbox"></span> <span>Panel de Productos</span>
            </a>
          </li>
          <li>
            <a href="/admin/agregar"
              ><span class="las la-plus-circle"></span> <span>Agregar Producto</span>
            </a>
          </li>
          <li>
            <a href="#">
              <span class="las la-users"></span> <span>Clientes</span></a
            >
          </li>
          <li>
            <a href="/"
              ><span class="las la-user-slash"></span> <span>Salir</span></a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="admin-content">

      <%- include("partials/admin/header.ejs") %> 
     

    <main id="main-dark">
      <div>
        <h1>Editar Producto <%= product.marca %></h1>
        <form
          action="/admin/editar/<%= product.id %>?_method=PUT"
          method="POST"
          style="margin-top: 5.5em"
        >
          <div class="form caja-agregar">
            Marca:<label for="marca-producto"
              ><input
                class="input style-admin"
                type="text"
                name="marca"
                id="marca-producto"
                required
                placeholder="Marca del producto"
                value="<%= product.marca %> "
              />
            </label>
            Descripción:<label for="descripción-producto"
              ><input
                id="descripción-producto"
                cols="30"
                rows="10"
                class="input style-admin"
                name="descripcion"
                required
                placeholder="Descripción del producto"
                value="<%= product.descripcion %> "
            /></label>
            Categorías:<label for="categoria-producto">
              <select
                class="input style-admin"
                name="categoria"
                id="categoria-producto"
                value="<%= product.categoria %>  "
              >
                <option value="">Seleccionar categoría</option>
                <option value="hombre">Hombre</option>
                <option value="mujer">Mujer</option>
                <option value="niños">Niños</option>
              </select>
            </label>
            Subcategorías:<label for="subcategoria-producto">
              <select
                class="input style-admin"
                name="subcategoria"
                id="subcategoria-producto"
                value="<%= product.subcategoria %>  "
              >
                <option value="">Seleccionar categoría</option>
                <option value="pantalon">pantalon</option>
                <option value="remera">remera</option>
              </select>
            </label>
            Colores:<label for="colores-producto"
              ><select
                class="input style-admin"
                name="color"
                id="colores-producto"
                value="<%= product.color %>  "
              >
                <option value="">Seleccionar color</option>
                <option value="negro">Negro</option>
                <option value="blanco">Blanco</option>
                <option value="azul">Azul</option>
              </select></label
            >
            Talles:<label for="talles-producto">
              <select
                class="input style-admin"
                name="talle"
                id="talles-producto"
                value="<%= product.talle %> "
              >
                <option value="">Seleccionar talle</option>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
              </select>
            </label>
            Precio:<label for="precio-producto">
              <input id="precio-producto" class='input style-admin' "
              type="number" name="precio" required placeholder="Precio del
              producto" value="<%= product.precio %>">
            </label>
            Imagen:<label for="imagen-producto"
              ><input
                id="imagen-producto"
                class="input style-admin"
                type="file"
                name="imagen-producto"
                multiple
                value="<%= product.imagen %> "
              />
            </label>
          </div>
          <div class="form">
            <button type="submit" class="btn-admin style-admin">EDITAR</button>
          </div>
        </form>
      </div>

      <!-- los values del select no funcan -->
    </main>
  </div>


    <script src="/javascripts/darkMode.js"></script>
    <script src="/javascripts/home.js"></script>
  </body>
</html>
